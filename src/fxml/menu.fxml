<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MenuController">
    <MenuBar fx:id="menuBar">
        <Menu text="File" fx:id="fileMenu">
            <MenuItem text="Save Scene" onAction="#handleSaveAction"/>
            <MenuItem text="Load Scene" onAction="#handleLoadAction"/>
            <MenuItem text="Import Model" onAction="#handleLoadModel"/>
            <MenuItem fx:id="mnuSaveImage" text="Save Rendered Image" disable="true"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit" onAction="#handleExitAction"/>
        </Menu>
        <Menu text="Run" fx:id="runMenu">
            <MenuItem text="Render" onAction="#handleRenderAction"/>
            <MenuItem text="Stop Render" onAction="#handleStopRenderAction"/>
            <SeparatorMenuItem/>
            <MenuItem text="Rendersettings" onAction="#handleSettingsAction"/>
        </Menu>
    </MenuBar>
</VBox>