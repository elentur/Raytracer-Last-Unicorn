<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import UI.MaterialView?>
<?import UI.NumberTextField?>
<Tab closable="false" fx:controller="controller.MainMaterialSettingsController" xmlns:fx="http://javafx.com/fxml" >
    <content>
        <VBox fx:id="materialView">
           <HBox styleClass="form-group-4">
               <Label text="Material"/>
                <HBox styleClass="col-3, element-center">
                    <MaterialView fx:id="materialRenderView"/>
                </HBox>
           </HBox>
            <HBox styleClass="form-group-4">
                <Label text="Diffuse"/>
                <ColorPicker fx:id="clpDiffuse" />
                <ComboBox styleClass="col-2" fx:id="cmbDiffuse" />
                <Button text="X" onAction="#ClearTexture"/>
            </HBox>
            <HBox styleClass="form-group-4">
                <Label text="Normal"/>
                <NumberTextField styleClass="number-text-field" fx:id="txtNormalScale" />
                <ComboBox styleClass="col-2" fx:id="cmbNormal"  />
                <Button text="X" onAction="#ClearTexture"/>
            </HBox>
            <HBox styleClass="form-group-4">
                <Label text="Irradiance"/>
                <ColorPicker fx:id="clpIrradiance" />
                <ComboBox  styleClass="col-2" fx:id="cmbIrradiance" />
                <Button text="X" onAction="#ClearTexture"/>
            </HBox>
        </VBox>
    </content>
</Tab>