<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import UI.NumberTextField?>
<?import UI.MaterialView?>
<VBox fx:id="nodeView" fx:controller="controller.MainSettingsNodeController" xmlns:fx="http://javafx.com/fxml" >
        <HBox>
            <Label text="X"/>
            <Label text="Y"/>
            <Label text="Z"/>
        </HBox>
        <HBox>
            <Label text="Translation"/>
            <NumberTextField fx:id="txtTranslationX" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtTranslationY" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtTranslationZ" onAction="#handleUpdateNode"/>
        </HBox>
        <HBox>
            <Label text="Scaling"/>
            <NumberTextField fx:id="txtScalingX" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtScalingY" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtScalingZ" onAction="#handleUpdateNode"/>
        </HBox>
        <HBox>
            <Label text="Rotation"/>
            <NumberTextField fx:id="txtRotationX" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtRotationY" onAction="#handleUpdateNode"/>
            <NumberTextField fx:id="txtRotationZ" onAction="#handleUpdateNode"/>
        </HBox>
    <HBox>
        <Label  text="Material" />
        <MaterialView fx:id="materialView"/>
        <ComboBox fx:id="cmbMaterial" onAction="#handleComboBoxMaterialAction"/>

    </HBox>
    <HBox>
        <CheckBox fx:id="chkCastShadows" text="Cast Shadows" selected="true" onAction="#handleUpdateNode"/>
    </HBox>
    <HBox>
        <CheckBox fx:id="chkReceiveShadows" text="Receive Shadows" selected="true" onAction="#handleUpdateNode"/>
    </HBox>
    <HBox>
        <CheckBox fx:id="chkVisible" text="Visible" selected="true" onAction="#handleUpdateNode"/>
    </HBox>
    <HBox>
        <CheckBox fx:id="chkFlipNormals" text="Flip Normals" onAction="#handleUpdateNode" />
    </HBox>
</VBox>